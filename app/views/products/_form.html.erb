      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price, :pattern => '[\+]\d{2}[\(]\d{2}[\)]\d{4}[\-]\d{4}' %>
  </div>
  <div class="field">
    <%= f.label :is_open %><br />
